%h2 Sign up
.container
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    .form-group.row
      = f.label :first_name, class: 'col-2 col-form-label'
      .col-10
        = f.text_field :first_name, autofocus: true, class: 'form-control'
    .form-group.row
      = f.label :last_name, class: 'col-2 col-form-label'
      .col-10
        = f.text_field :last_name, class: 'form-control'
    .form-group.row
      = f.label :gender, class: 'col-2 col-form-label'
      .col-10
        = f.select :gender, ['Male', 'Female'], {}, class: 'form-control'
    .form-group.row
      = f.label :birthday, class: 'col-2 col-form-label'
      .col-10
        = f.text_field :birthday, type: 'date', class: 'form-control'
    .form-group.row
      = f.label :email, class: 'col-2 col-form-label'
      .col-10
        = f.email_field :email, class: 'form-control'
    .form-group.row
      = f.label :password, class: 'col-2 col-form-label'
      .col-10
        = f.password_field :password, autocomplete: "off", class: 'form-control'
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)
    .form-group.row
      = f.label :password_confirmation, class: 'col-2 col-form-label'
      .col-10
        = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'
    .actions
      = f.submit "Sign up"
  = render "users/shared/links"
